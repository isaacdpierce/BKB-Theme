 <!-- /sections/gdc-index-video.liquid -->

{% style %}
 .gdc-video {
    width: 100vw; 
    height: 100vh;
  }

.gdc-video iframe {
    width: 100%; 
    height: 100%;	
}
{% endstyle %}


<section class="gdc-video">
{{ section.settings.video_embed }}
</section>

{% schema %}
{
  "name": "Embedded Video",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Video"
    },
    {
      "type": "html",
      "id": "video_embed",
      "label": "Video Embed Code",
 	  "info": "Embed code from video source."
    }
 
  ],
  "presets": [
    {
      "name": "Embedded Video",
      "category": "video"
    }
  ]
}
{% endschema %}
