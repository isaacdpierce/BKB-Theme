<!-- /snippets/social-sharing.liquid -->

<div class="sharing {% if template.name == 'password' %}social-sharing{% endif %}">

	<a class="share share--email" target="_blank" 
		href="mailto:?subject=Check%20out%20this%20information%20by%20Barbara%20Karnes.&body=Barbara%20Karnes%20compassionately%20explains%20stages%20of%20the%20dying%20process,%20living%20with%20a%20life%20threatening%20illness,%20pain%20management,%20and%20how%20people%20grieve.%0D%0A%0D%0A{{shop.url}}{{ article.url }}" target=”_blank” rel=noopener noreferrer””>
		{% include 'icon-email-2' %}
		
		<span class="visually-hidden">Click to share a link to this post through email!</span>
	</a>


  {% if settings.share_facebook %}
    <a class="share share--facebook" target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}">
      {% include 'icon-facebook' %}
      <span class="visually-hidden">{{ 'general.social.alt_text.share_on_facebook' | t }}</span>
    </a>
  {% endif %}
  
  {% if settings.share_linkedin %}
    <a class="share share--linkedin" target="_blank" href="//www.linkedin.com/sharing/share-offsite/?url={{ shop.url | append: share_permalink }}">
      {% include 'icon-linkedin' %}
      <span class="visually-hidden">{{ 'general.social.alt_text.share_on_linkedin' | t }}</span>
    </a>
  {% endif %}

  {% if settings.share_twitter %}
    <a class="share share--twitter" target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}">
      {% include 'icon-twitter' %}
      <span class="visually-hidden">{{ 'general.social.alt_text.share_on_twitter' | t }}</span>
    </a>
  {% endif %}

  {% if settings.share_pinterest %}
    <a class="share share--pinterest" target="_blank" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}">
      {% include 'icon-pinterest' %}
      <span class="visually-hidden">{{ 'general.social.alt_text.share_on_pinterest' | t }}</span>
    </a>
  {% endif %}

</div>
